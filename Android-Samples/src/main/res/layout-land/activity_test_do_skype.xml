<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.skype.android.mobilesdk.testapp.TestSkypeActionsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_title_text"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chat"
        android:id="@+id/chatButton"
        android:layout_alignTop="@+id/joinButton"
        android:layout_toStartOf="@+id/joinButton"
        android:layout_marginEnd="59dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/skypeIdInput"
        android:layout_above="@+id/chatButton"
        android:layout_marginBottom="81dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/inputLabel"
        android:layout_alignParentStart="true"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:inputType="text"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/audioCall"
        android:id="@+id/callButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/videoCall"
        android:id="@+id/videoCallButton"
        android:layout_alignTop="@+id/callButton"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/SkypeIdBoxLabel"
        android:id="@+id/inputLabel"
        android:layout_above="@+id/skypeIdInput"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/join"
        android:id="@+id/joinButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
